<%= render "navbar" %>
<div class="container" style="margin-top:100px;">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col" style="width:10%">#</th>
          <th scope="col" style="width:60%; text-align:center;">제목</th>
          <th scope="col" style="width:10%; text-align:center;" >작성자</th>
          <th scope="col" style="width:20%; text-align:center;">작성시간</th>
        </tr>
      </thead>
      <tbody>
        <% @post.each do |p| %>  
            <tr>
              <th scope="row" style="width:10%;"><%= p.id %></th>
              <td style="width:60%"><a href="/post/show/<%= p.id %>" style="text-decoration:none; color:black;"><%= p.title %></a></td>
              <td style="width:10%; text-align:center;"><%= p.user.username %></td>
              <td style="width:20%"><%= p.created_at.to_s.split("+").first %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <div style="text-align:right; margin-top:50px;">
      <a href="/post/new">
          <button type="button" class="btn btn-dark">글쓰기</button>
      </a>
    </div>
</div>